#!/usr/bin/make -f
QMAKE=qmake-qt4

REV=$(shell dpkg-parsechangelog | sed -rne 's,^Version: .*[+~]svn([0-9]+).*,\1,p')
VER=$(shell dpkg-parsechangelog | sed -rne 's,^Version: ([^-]+).*,\1,p')

get-orig-source:
        rm -rf sdr-shell-$(VER).orig
        svn -q export -r $(REV) http://sdr-shell.googlecode.com/svn/trunk \
                        sdr-shell-$(VER).orig
        GZIP=--best tar -cz --owner root --group root --mode a+rX \
                        -f sdr-shell_$(VER).orig.tar.gz \
                        sdr-shell-$(VER).orig
        rm -r sdr-shell-$(VER).orig


override_dh_auto_configure:
	qmake-qt4 sdr-shell.pro -o Makefile

%:
	dh $@
